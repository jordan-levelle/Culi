<% if(recipe != null ) { %>

<div class="row">
    <div class="col-12 col-md-4">
        <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 25px;" alt="<%- recipe.title %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12"><h2><%- recipe.title %></h2>
                <h4>Category: <%- recipe.category %></h4>
                <p><%- recipe.description%></p>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4" >
        <form method="POST" action="/recipe/<%= recipe.id %>">
            <button id="submit"type="submit" class="btn btn-primary">Delete Recipe</button>
        </form>
    </div>

    <div class="row pt-4">
        <div class="col-12">
            <h4>Ingredients</h4>
            <ul class="list-group list-group-flush">
                <!-- work through array of ingredients -->
                <% recipe.ingredients.forEach(function(ingredients, index){ %>
                <li class="list-group-item"><%= ingredients %>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>


<% } %>




