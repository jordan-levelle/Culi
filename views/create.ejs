<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit a Culi Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">There are other Culi's out there waiting for new recipes to try. Submit yours today!</p>
    </div>
</div>

<!--Alert Success Message-->
<% if(infoSubObj != '') { %>
    <div class="alert alert-success" role="alert">
        <%= infoSubObj %>
    </div>
<% } %>

<!--Alert Fail Message-->
<% if(infoErrObj != '') { %>
<div class="alert alert-danger" role="alert">
    <%= infoErrObj[0].message %>
</div>
<% } %>

<!--Culi Create Recipe Form-->
<div class="row justify-content-center">
    <div class="col-8">
        <form action="/create" enctype="multipart/form-data" method="POST">
            <div class="row g-3">
                <div class="col-12">
                    <label for="title" class="label">Title of Recipe</label>
                    <input type="text" name="title" id="title" class="form-control">
                </div>

                <div class="col-12">
                    <label for="description" class="label">Describe Your Recipe</label>
                    <textarea name="description" id="description" class="form-control" cols="35" rows="10"></textarea>
                </div>

                <div class="col-12">
                <label for="ingredients" class="form-label">Recipe Ingredients</label>
                    <div class="list_of_ingredients">
                        <div class="ingredient_div">
                            <input type="text" name="ingredients" class="form-control">
                        </div>
                    </div>  
                </div>

                <div class="col-12">
                    <button type="button" class="btn btn-outline-primary" id="add_ingredients_btn">+</button>
                </div>

                <div class="col-12">
                    <label for="category">Select a Category for your Recipe</label>
                    <select class="form-select form-control" name="category" aria-label="Category">
                    <option selected>Select Culi Category</option>
                    <option value="Breakfast">Breakfast</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    <option value="Dessert">Dessert</option>
                    <option value="Everything in Between">Everything in Between</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>
            
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>