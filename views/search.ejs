<h4>Search</h4>

<div class="row flex-row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4 middle_div1">
    <% if(recipe != '') { %>
        <% recipe.forEach(function(recipe, index){ %>
            <a href="/recipe/<%=recipe.id %>" class="col text-center meal_link">
                <div class="card">
                  <img src="/uploads/<%=recipe.image %>" alt="<%-recipe.title %>" loading="lazy">
                </div>
                <div><%-recipe.title %></div>
            </a>
        <% }) %>
    <% } %>
</div>